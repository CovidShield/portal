<div class="page">
  <div class="page__container">
    <div class="page__header">
      <h1 class="page__title">
        <% if current_user == @user %>
          <%= t('settings') %>
        <% else %>
          <%= t('edit_user.title') %>
        <% end %>
      </h1>
    </div>
    <div class="page__content">
      <%= render 'form', user: @user, button_text: t('edit_user.update_user') %>
    </div>
  </div>
</div>
