<div class="page">
  <div class="page__container">
    <div class="page__header">
      <div class="visually-hidden">
        <h1 tabindex="-1"><%= t('home.title')%></h1>
      </div>
    </div>
    <div class="page__content">
      <div class="card">
        <div class="card__header">
          <h2 class="card__title"><%= t('home.card1.title') %></h2>
        </div>
        <div class="card__body">
          <p class="subheading"><%= t('home.card1.subheading') %></p>
          <ol class="ordered-list">
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <%= t('home.card1.step1_html') %>
              </div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <%= t('home.card1.step2') %>
              </div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content"><%= t('home.card1.step3') %></div>
            </li>
          </ol>
        </div>
      </div>
      <div class="card">
        <div class="card__header">
          <h2 class="card__title"><%= t('home.card2.title') %></h2>
        </div>
        <div class="card__body">
          <p class="subheading"><%= t('home.card2.subheading') %></p>
          <ol class="ordered-list">
            <li class="ordered-list__item">
              <div class="ordered-list__item-content"><%= t('home.card2.step1') %></div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <span><%= t('home.card2.step2') %></span>
                <button aria-label="<%= t('more_info') %>" class="help__activator" type="button" data-modal-activator="step2-2" aria-haspopup="dialog">
                  <svg class="icon"><use xlink:href="#question-mark" /></svg>
                </button>
                <%= render 'components/modal', {id: 'step2-2', title: t('home.card2.step2_modal_title')} do %>
                  <p><%= t('home.card2.step2_modal_content') %></p>
                  <%= image_tag('step2.png', class: 'image', alt: t('home.card2.step2_modal_alt')) %>
                <% end %>  
              </div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <%= t('home.card2.step3_html') %>
                <button aria-label="<%= t('more_info') %>" class="help__activator" type="button" data-modal-activator="step2-3" aria-haspopup="dialog">
                  <svg class="icon"><use xlink:href="#question-mark" /></svg>
                </button>
                <%= render 'components/modal', {id: 'step2-3', title: t('home.card2.step3_modal_title')} do %>
                  <p><%= t('home.card2.step3_modal_content_html') %></p>
                  <%= image_tag('step3.png', class: 'image', alt: t('home.card3.step2_modal_alt')) %>
                <% end %>  
              </div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <div><%= t('home.card2.step4') %></div>
                <div class="code-generator">
                  <div id="code-result" class="code-generator__banner" role="region" aria-label="<%= t('home.card2.step4_generated_code') %>" data-code-banner>
                    <strong class="code-generator__result" data-code-result aria-live="polite"></strong>
                    <div aria-hidden="true" class="code-generator__empty-banner" data-code-empty-result></div>
                  </div>
                  <div class="code-generator__banner code-generator__banner--expired" data-code-expired data-hidden>
                    <%= t('home.card2.step4_code_expired') %>
                  </div>
                  <div class="code-generator__button">
                    <button type="button" class="button" data-generate-code aria-controls="code-result">
                      <span data-generate-content><%= t('home.card2.step4_generate_code') %></span>
                      <span data-generate-new-content data-hidden><%= t('home.card2.step4_generate_new_code') %></span>
                    </button>
                  </div>
                </div>
              </div>
            </li>
            <li class="ordered-list__item">
              <div class="ordered-list__item-content">
                <%= t('home.card2.step5_html') %>
                <button aria-label="<%= t('more_info') %>" class="help__activator" type="button" data-modal-activator="step2-5" aria-haspopup="dialog">
                  <svg class="icon"><use xlink:href="#question-mark" /></svg>
                </button>
                <%= render 'components/modal', {id: 'step2-5', title: t('home.card2.step5_modal_title')} do %>
                  <p><%= t('home.card2.step5_modal_content_html') %></p>
                  <%= image_tag('step5.png', class: 'image', alt: t('home.card2.step5_modal_alt')) %>
                <% end %>  
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
    <div class="page__actions">
      <button class="button" type="button" disabled="disabled" data-reset-code>
        <%= t('home.next_patient') %>
      </button>
    </div>
  </div>
</div>
